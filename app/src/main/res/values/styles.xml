<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/yellow</item>
        <item name="colorPrimaryDark">@color/deeppurple</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    
    <style name="AppTheme.NoActionBar">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>

    </style>

    <style name="Button" parent="@android:style/Widget.EditText" >
        <item name="backgroundTint">@color/colorPrimaryDark</item>
        <item name="android:textColor">#6a7170</item>
        <item name="android:textColorHint">#6a7170</item>
        <item name="android:textColorLink">#6a7170</item>
    </style>

    <style name="Button1" parent="@android:style/Widget.Button" >
        <item name="backgroundTint">@color/colorPrimaryDark</item>
    </style>

    <style name="ButtonSearch" parent="@android:style/Widget.ImageButton" >
        <item name="backgroundTint">@android:color/transparent</item>

    </style>


</resources>

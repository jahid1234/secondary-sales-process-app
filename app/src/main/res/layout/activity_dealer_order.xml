                <!--android:id="@+id/send_btn_aso"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:text="Place Order"-->
                <!--android:textAlignment="center"-->
                <!--android:background="@drawable/button"-->

                <!--/>-->

        <!--</LinearLayout>-->
    </LinearLayout>


</ScrollView>
